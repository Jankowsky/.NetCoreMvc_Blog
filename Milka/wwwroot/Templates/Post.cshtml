@using RazorLight
@using RazorLight.Text
@model Milka.Models.Post

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Milka-Page</title>

    <style type="text/css">

        .col-9 {
            width: 75%;

            position: center;
            display: inline-block

        }
        .body {
            padding-top: 40pt;

            background-image: url("http://ilovecook.pl/images/cegly.jpg");
            text-align: center;
            margin: 0px;

        }


        .title {
            text-align: center;
            font-size: 30px !important;
        }

        .postBackground {
            padding-top: 20px;
            padding-bottom: 20px;

            background-image: url('http://ilovecook.pl/images/paper.jpg');
            margin-top: 20px;
            min-width: 200px;
            border-radius: 25px;
            border-width: 1px;
            border-style: solid;
            border-color: black;
        }
        .postTitle {
            font-weight: bold;
            padding-bottom: 20px;
            font-size: x-large !important;
            text-align: center;
        }


        .postImg {
            text-align: center;

        }

        .img {
            height: inherit;
            object-fit: contain;
            width: 95%;
            image-orientation: from-image;

        }

        .postText {
            text-align: left;
            margin: 10px;
            margin-top: 20px;
            font-size: medium;

        }

        .author {
            font-style: italic;
            margin-left: 30px;
            float: left;
        }

        .date {
            margin-right: 30px;
            float: right;
        }

        .postBottom {
            margin-top: 30px;
            clear: both;
        }

        .row {
            margin: 0px;
        }

        .body-content {
            padding-left: 15px;
            padding-right: 15px;
        }

        .centered {
            display: flex;
            justify-content: center;
        }

        html, body {
            height: 100%;
        }
        body {
            display: flex;
            flex-direction: column;

        }
        .content {
            flex: 1 0 auto;
        }
        .footer {
            min-height: 80px;
            padding-bottom: 50px;
            color:#f0f9ff;
            background-color:#282d32;
            width: 100%;
        }

        .copyright {

            margin-left: 20px;
            float: left;
            text-align:left;
            padding-top:24px;
            opacity:0.3;
            font-size:13px;
            margin-bottom:10px;
        }

        .cancelSub {
            font-size: 15px;
            float: right;
            margin-right: 20%;
            margin-top: 15px;
        }
        /* unvisited link */
        a:link {
            color: red;
        }

        /* visited link */
        a:visited {
            color: green;
        }

        /* mouse over link */
        a:hover {
            color: hotpink;
        }

        /* selected link */
        a:active {
            color: #007bff;
        }
    </style>

</head>
<body class="body">

<div class="content">

    <div class="title">
        <h2 class="logo">I Love Cook !</h2>
    </div>


    <div class="postBackground col-9">
        <div class="postTitle">
            <span>@Model.Title</span>
            <br/>
        </div>
        <div class="postImg aspect-ratio-box">
            <div class="aspect-ratio-box-inside">
                <img class="img" src="http://ilovecook.pl/@Model.Img1"/>
            </div>
        </div>
        <div class="postText">
            @(new RawString(Model.PostText))
            <br/>
        </div>
        <div class="postBottom">
            <span class="text-left author"> @Model.Author</span>
            <span class="date">@Model.Created</span>
        </div>
    </div>

</div>

<footer class="footer">
    <span class="copyright">&copy; 2018 - Jankowsky-dev : <a href="www.ilovecook.pl">www.ilovecook.pl</a></span>
    <div class="cancelSub">
    <span>Aby anulowac subskrypcje kliknij w </span><a href="http://www.ilovecook.pl/home/deletesubscriber">link</a><span>.</span>
    </div>
</footer>
</body>
</html>