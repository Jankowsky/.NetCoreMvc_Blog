@using RazorLight
@using RazorLight.Text
@model Milka.Models.Subscriber

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Milka-Page</title>

<style type="text/css">

    .col-9 {
        width: 75%;

        position: center;
        display: inline-block

    }
    .body {
        padding-top: 40pt;
        
        background-image: url("http://ilovecook.pl/images/cegly.jpg");
        text-align: center;
        margin: 0px;

    }


    .title {
        text-align: center;
        font-size: 30px !important;
    }

    .postBackground {
        padding-top: 20px;
        padding-bottom: 20px;

        background-image: url('http://ilovecook.pl/images/paper.jpg');
        margin-top: 20px;
        min-width: 200px;
        border-radius: 25px;
        border-width: 1px;
        border-style: solid;
        border-color: black;
    }
    .postTitle {
        font-weight: bold;
        padding-bottom: 20px;
        font-size: x-large !important;
        text-align: center;
    }


    .postImg {
        text-align: center;

    }

    .img {
        height: inherit;
        object-fit: contain;
        width: 95%;
        image-orientation: from-image;

    }

    .postText {
        text-align: left;
        margin: 10px;
        margin-top: 20px;
        font-size: medium;

    }

    .author {
        font-style: italic;
        margin-left: 30px;
        float: left;
    }

    .date {
        margin-right: 30px;
        float: right;
    }

    .postBottom {
        margin-top: 30px;
        clear: both;
    }

    .row {
        margin: 0px;
    }

    .body-content {
        padding-left: 15px;
        padding-right: 15px;
    }

    .centered {
        display: flex;
        justify-content: center;
    }

    html, body {
        height: 100%;
    }
    body {
        display: flex;
        flex-direction: column;

    }
    .content {
        flex: 1 0 auto;

    }
    .footer {
        min-height: 80px;
        padding-bottom: 50px;
        color:#f0f9ff;
        background-color:#282d32;
        width: 100%;
    }

    .copyright {

        margin-left: 20px;
        float: left;
        text-align:left;
        padding-top:24px;
        opacity:0.3;
        font-size:13px;
        margin-bottom:10px;
    }

    .cancelSub {
        font-size: 15px;
        float: right;
        margin-right: 20%;
        margin-top: 15px;
    }
    /* unvisited link */
    a:link {
        color: red;
    }

    /* visited link */
    a:visited {
        color: green;
    }

    /* mouse over link */
    a:hover {
        color: hotpink;
    }

    /* selected link */
    a:active {
        color: #007bff;
    }

    .bg-dark {
        padding-right: 10px;
        padding-left: 10px;
        color:#f0f9ff;
        background-color:#282d32;
        width: 55%;
        align-content: center;
        margin: auto;
        min-height: 150px;
        border-radius: 25px;
        overflow: scroll;
        margin-bottom: 20px;
    }
    .m-2 {

        position: center;
        padding-top: 20px;


    }
</style>

</head>
