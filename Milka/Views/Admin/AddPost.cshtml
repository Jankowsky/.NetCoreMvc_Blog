@model Models.PostModel

<section id="cover">
    <div id="cover-caption">
        <div id="container" class="container">
            <div class="row">
                <div class="col-sm-10 offset-sm-1 text-center">
                    <h1 class="display-3">Add Post</h1>
                    <div class="form-control bg-dark text-white">
                        <form class="justify-content-center" asp-controller="Admin" asp-action="AddPost" method="post" enctype="multipart/form-data">

                            <div class="form-group col">
                                <label class="sr-only" asp-for="Author"></label>
                                <span asp-validation-for="Author" class="text-danger"></span>
                                <span>Author : </span>
                                <input class="form-control" asp-for="Author" value="@if (Model != null)
                                                                                    {@Model.Author
                                                                                    }"/>
                            </div>


                            <div class="form-group col">
                                <label class="sr-only" asp-for="Title"></label>
                                <span asp-validation-for="Title" class="text-danger"></span>
                                <span>Title : </span>
                                <input class="form-control" asp-for="Title" value="@if (Model != null)
                                                                                   {@Model.Title
                                                                                   }"/>
                            </div>

                            <div class="form-group col">
                                <label class="sr-only" asp-for="Img1"> </label>
                                <input class="form-control" type="file" name="file" accept=".png,.jpg,.jpeg,.gif"/>
                            </div>
                            <div class="form-group col">
                                <label class="sr-only" asp-for="PostText"> </label>
                                <span>Post text : </span>

                                <span asp-validation-for="PostText" class="text-danger"></span>

                                <textarea class="form-control" asp-for="PostText" rows="15">@if (Model != null)
                                                                                            {@Model.PostText
                                                                                            }
                         </textarea>
                            </div>
                               
                            
                            <script type="text/javascript">
                                
                                $(function($) {

                                    $("textarea").cazary({
                                        
                                        commands: "FULL"
                                        

                                    });
                                    
                                });
                                
                            </script>
                            <br>
                            <button class="btn btn-success btn-lg" type="submit">Submit</button>
                            <input type="button" value="Back" class="btn btn-lg btn-danger" onclick="window.location = '@Url.Action("Postmanagments", "Admin")'"/>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>